{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
  },
  "include": [
    "src/*",
    "src/**/*",
    "types/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "esm",
    "lib"
  ]
}
