{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitThis": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "baseUrl": ".",
    "paths": {
      "lib/*": [
        "../src/*"
      ],
      "lib": [
        "../src/index.ts"
      ],
      "packages/*": [
        "../src/packages/*"
      ]
    },
  },
  "include": [
    "*.ts",
    "*.tsx",
    "unit/*",
    "../types/*"
  ],
}
